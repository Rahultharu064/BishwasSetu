generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define your database schema here
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  address   String?
  phone     String?
  password  String
  role      Role      
  isVerified Boolean @default(false)
  otp String?
  otpExpiry DateTime?
  createdAt DateTime  @default(now())
  
  services Service[]
}

enum Role{
  CUSTOMER
  PROVIDER
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  icon        String?   @db.VarChar(500)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Trust score tracking (for future implementation)
  avgTrustScore Float? @default(0.0)
  providerCount   Int   @default(0)
  
  services Service[]
}

model Service {
  id          String    @id @default(uuid())
  title       String
  description String    @db.Text
  price       Float
  location    String
  providerId  Int
  categoryId  String
  
  provider    User      @relation(fields: [providerId], references: [id])
  category    Category  @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([providerId])
  @@index([categoryId])
}
