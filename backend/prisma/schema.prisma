generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model category {
  id          String    @id
  name        String    @unique(map: "Category_name_key")
  icon        String?   @db.VarChar(500)
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  service     service[]
  provider    provider[]
}

model kycdocument {
  id         Int                @id @default(autoincrement())
  providerId Int
  type       kycdocument_type
  fileUrl    String
  status     kycdocument_status @default(PENDING)
  createdAt  DateTime           @default(now())
  provider   provider           @relation(fields: [providerId], references: [id], onDelete: Cascade, map: "KYCDocument_providerId_fkey")

  @@index([providerId], map: "KYCDocument_providerId_fkey")
}

model provider {
  id                    Int                         @id @default(autoincrement())
  userId                Int                         @unique(map: "Provider_userId_key")
  categoryId            String?
  legalName             String
  experienceYears       Int
  bio                   String                      @db.Text
  skills                String?                     @db.Text
  prevCompany           String?
  prevRole              String?
  workDuration          String?
  portfolioUrls         String?                     @db.Text
  tradeLicenseUrl       String?
  serviceDistrict       String?
  serviceMunicipality   String?
  availabilityDays      String?
  availabilityTime      String?
  isEmergencyAvailable  Boolean                     @default(false)
  emergencyResponseTime String?
  emergencyExtraCharge  Float?
  price                 Float?
  duration              String?
  profilePhotoUrl       String?
  verificationStatus    provider_verificationStatus @default(INCOMPLETE)
  trustScore            Float                       @default(0)
  createdAt             DateTime                    @default(now())
  updatedAt             DateTime
  category              category?                   @relation(fields: [categoryId], references: [id], onDelete: SetNull, map: "Provider_categoryId_fkey")
  kycDocuments          kycdocument[]
  user                  user                        @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Provider_userId_fkey")
  service               service[]
}

model service {
  id          Int      @id @default(autoincrement())
  providerId  Int
  categoryId  String
  title       String
  icon        String?  @db.VarChar(50)
  description String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  category    category @relation(fields: [categoryId], references: [id], onDelete: Cascade, map: "Service_categoryId_fkey")
  provider    provider @relation(fields: [providerId], references: [id], onDelete: Cascade, map: "Service_providerId_fkey")

  @@index([categoryId], map: "Service_categoryId_fkey")
  @@index([providerId], map: "Service_providerId_fkey")
}

model user {
  id           Int       @id @default(autoincrement())
  email        String    @unique(map: "User_email_key")
  name         String?
  address      String?
  district     String?
  municipality String?
  gender       String?
  phone        String?
  password     String
  role         user_role
  isVerified   Boolean   @default(false)
  otp          String?
  otpExpiry    DateTime?
  createdAt    DateTime  @default(now())
  provider     provider?
}

enum kycdocument_type {
  GOVERNMENT_ID
  CERTIFICATE
  PROFILE_PHOTO
}

enum kycdocument_status {
  PENDING
  APPROVED
  REJECTED
}

enum user_role {
  CUSTOMER
  PROVIDER
  ADMIN
}

enum provider_verificationStatus {
  INCOMPLETE
  DOCUMENTS_PENDING
  UNDER_REVIEW
  VERIFIED
  REJECTED
}
